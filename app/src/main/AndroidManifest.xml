<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fitlife.feedme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="Result"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipeActivity"
            android:label="Recipe"
            android:theme="@style/RecipeAppTheme" />
        <activity
            android:name=".IngredientsActivity"
            android:label="Ingredients"
            android:theme="@style/IngredientsTheme" />
        <activity
            android:name=".RecipeComplexityActivity"
            android:label="Complexity"
            android:theme="@style/RecipeComplexityTheme"></activity>
    </application>

</manifest>